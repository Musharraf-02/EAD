@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Assignment2_Blogs.Models
@model Blog
<div class="container" style="margin-top:100px">
    <div class="row justify-content-center">
        <div class="col-md-8 col-12">
            <h2>Create Your Post</h2>
            <hr>
            <form method="post" asp-controller="Blog" asp-action="newPost">
                <div>
                    <div class="form-group">
                        <label asp-for="title">Title*</label>
                    </div>
                    <input asp-for="title" class="form-control" />
                    <span asp-validation-for="title"></span>
                </div>
                <br />
                <div>
                    <div class="form-group">
                        <label asp-for="deccription">Description*</label>
                    </div>
                    <textarea asp-for="deccription" class="form-control" rows="15"></textarea>
                    <span asp-validation-for="deccription"></span>
                </div>
                <br />
                <button type="submit" class=" btn btn-outline-info">Post</button>
            </form>
        </div>
    </div>
</div>