@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Assignment2_Blogs.Models
@model Blog
<div class="container" style="margin-top:100px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-12" style="border:1px solid;border-color:lightgray;border-radius:5px;">
            <div style="padding:10px;overflow:auto;">
                <span style="color:deepskyblue">
                    @Model.username
                </span>
                <span style="color:grey">
                    &emsp;@Model.date.ToString("dddd, dd MMMM yyyy")
                </span>
                <br />
                <br />
                <div style="display:inline-block">
                    <a class="btn btn-secondary" asp-controller="Blog" asp-action="updateBlog" asp-route-id="@Model.blogID">Update</a>
                    <a class="btn btn-danger" asp-controller="Blog" asp-action="deleteBlog" asp-route-id="@Model.blogID">Delete</a>
                </div>
                <hr>
                <h2>
                    @Model.title
                </h2>
                <p>
                    @Model.deccription
                </p>
            </div>
        </div>
    </div>
</div>